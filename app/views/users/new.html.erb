<h1>Sign up!</h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.submit %>

  <%= link_to "Admin Signup", new_admin_path %>

<% end %>

<h1>Login</h1>

<% if flash[:alert] %>
    <%= flash[:alert] %>
<% end %>

<%= form_tag reservaitons_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag 'Login' %>
<% end %>

<nav>
  <% if @current_user %>
    <p>Logged in as <%= @current_user.username %></p>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
</nav>
